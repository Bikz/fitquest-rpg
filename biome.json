{
  "$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "files": {
    "includes": [
      "**/*",
      "!!**/node_modules",
      "!!**/.expo",
      "!!**/apps/mobile/.expo",
      "!!**/dist",
      "!!**/web-build",
      "!!**/apps/mobile/ios",
      "!!**/apps/mobile/android",
      "!!**/.turbo"
    ]
  }
}
